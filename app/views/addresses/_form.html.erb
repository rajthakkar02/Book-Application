<%= render "shared/error", obj: @addresses %>
<%= form_with model: @addresses, local: true do |form| %>
  <div class="form-group mb-3">
    <%= form.label :address_type, "Address Type", class: "form-label" %>
    <%= form.select :address_type, Address.address_types.keys.map { |k| [k.humanize, k] }, { include_blank: "Select an option" }, { class: "form-select" , required: true} %>
  </div>

  <div class="form-group mb-3">
    <%= form.hidden_field :user_id, value: current_user.id, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :address_line1, "Building, House No, Flat No", class: "form-label" %>
    <%= form.text_field :address_line1, class: "form-control", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :address_line2, "Area, Street, Sector, Village", class: "form-label" %>
    <%= form.text_field :address_line2, class: "form-control" , required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :landmark, "Landmark", class: "form-label" %>
    <%= form.text_field :landmark, class: "form-control" , required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :city, "City", class: "form-label" %>
    <%= form.text_field :city, class: "form-control" , required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :state, "State", class: "form-label" %>
    <%= form.text_field :state, class: "form-control" , required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :pincode, "Pincode", class: "form-label" %>
    <%= form.text_field :pincode, class: "form-control" , required: true , pattern: "[0-9]{6}", placeholder: "Enter a 6-digit pincode" %>
  </div>

  <div class="form-group mb-3">
    <%= form.submit  class: "btn btn-primary" %>
  </div>
<% end %>