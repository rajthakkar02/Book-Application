<% if user_signed_in? && current_user.role == "seller"%>
  <% @book_sellers.each do |book_seller| %>
    <div class="card d-inline-flex justify-content-start flex-direction: row mx-3 mb-2 " style="width: 18rem;">
      <%= image_tag url_for(book_seller.book.book_image) , class: "card-img-top p-1" , alt: "book-image" %>
      <div class="card-body">
        <h5 class="card-title d-flex justify-content-center"><%= book_seller.book.book_name  %></h5>
        <p class="card-text d-flex justify-content-center"><strong><%= book_seller.book.user.name %></strong></p>
        <p class="card-text d-flex justify-content-center">Quantity: <%= book_seller.quantity %></p>
        <p class="card-text d-flex justify-content-center fs-5">â‚¹<%= book_seller.seller_price %></p>
        <%= link_to "Show" , book_seller_path(book_seller) ,class: "btn btn-primary d-flex justify-content-center" %>
      </div>
    </div>
  <% end %>
  <div class="flickr_pagination d-flex justify-content-center mt-3">
    <%= will_paginate @book_sellers %>
  </div>
<% end %>